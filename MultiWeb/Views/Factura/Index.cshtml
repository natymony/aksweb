@using MultiApp.Model
@model IList<factura>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Factura</h3>

                        @using (Html.BeginForm("Index", "Factura"))
                        {

                            <div class="row">
                                <div class="col-md-4 mb-4">

                                    <div class="form-outline">
                                        <h4 class="mb-4 pb-4 pb-md-0 mb-md-5">Facturas</h4>
                                    </div>
                                </div>
                              
                            </div>
                            <div class="row">
                                <div class="form-group">  
                                    <label for="exampleFormControlInput1">Fecha</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" name="fecha">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Valor</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" name="valor">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Detalle</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" name="descripcion">
                                </div>
                                <div class="col-md-4 mb-4">

                                    <div class="form-outline">
                                        <input class="btn btn-primary btn-lg" type="submit" value="REGISTRAR" />
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                @if (Model != null)
                                                {
                                                    <th scope="col"> NUMERO </th>
                                                    <th scope="col"> FECHA </th>
                                                    <th scope="col"> DETALLE </th>
                                                    <th scope="col"> VALOR </th>
                                                    <th scope="col"> ELIMINAR </th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model)
                                            {
                                                <tr>
                                                    <td> @item.numero</td>
                                                    <td> @item.fecha</td>
                                                    <td> @item.descripcion</td>
                                                    <td> @item.valor</td>
                                                    <td>
                                                        <a href="@Url.Action("eliminar", "Factura", new {codigo=item.numero})">
                                                            <span>Eliminar</span>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div id="msgid">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    Nataly Hernandez
                                    Giovanny Criollo
                                    20/11/2022
                                    AUTOMATIZACIÓN DE LOS PROCESOS DE SOFTWARE GRUPO - 2

                                    </div>
                                    </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {

    });
</script>
